#!/bin/bash
#PBS -k o
#PBS -l nodes=1:ppn=4,walltime=2:00:00


## modules
#echo "Loading modules"
#module load ants
#module load nodejs
#echo "Finished loading modules"

FA_MOVE=`jq -r '.fa_moving' config.json`
FA_STAT=`jq -r '.fa_static' config.json`

# ANTs transformation
echo "ANTs transformation"
singularity exec -e docker://brainlife/ants:2.2.0 ./voxel_based_transformation.sh ${FA_MOVE} ${FA_STAT} 

ret=$?
if [ ! $ret -eq 0 ]; then
	echo "ANTs transformation failed"
	echo $ret > finished
	exit $ret
fi

echo "Complete"
